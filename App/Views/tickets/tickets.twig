{% extends "base.html" %}

{% block title %}Mes tickets{% endblock %}

{% block body %}

    <div class="container">
        <div class="row">
            {% for ticket in tickets %}
                <div class="col-md-4">
                    <div class="card p-3 mb-2">
                        <div class="d-flex justify-content-between">
                            <div class="d-flex flex-row align-items-center">
                                <div class="icon"><i class="bx bxl-mailchimp"></i></div>
                                <div class="ms-2 c-details">
                                    <h6 class="mb-0">ID: #{{ ticket.id }}</h6> <span>{{ ticket.created_at }}</span>
                                </div>
                            </div>
                            <div class="badge"><span>{{ ticket.project_id }}</span></div>
                        </div>
                        <div class="mt-5">
                            <h3 class="heading">{{ ticket.title }}
                            <div class="mt-5">
                               <p class="h6"> {{ ticket.status }}</p>
                                <div class="progress">
                                    {% if ticket.status == "En Attente" %}
                                        <div class="progress-bar" role="progressbar" style="width: 1%" aria-valuenow="0"
                                             aria-valuemin="0" aria-valuemax="100"></div>
                                    {% elseif ticket.status == "Soldé" %}
                                        <div class="progress-bar" role="progressbar" style="width: 100%" aria-valuenow="100"
                                             aria-valuemin="0" aria-valuemax="100"></div>
                                    {% elseif ticket.status == "En cours" %}
                                        <div class="progress-bar" role="progressbar" style="width: 50%" aria-valuenow="50"
                                             aria-valuemin="0" aria-valuemax="100"></div>
                                    {% endif %}
                                </div>
                                <div class="mt-5"><div class="btn btn-primary">Détails</div> </div>
                            </div>
                        </div>
                    </div>
                </div>

            {% endfor %}
        </div>
    </div>
{% endblock %}
